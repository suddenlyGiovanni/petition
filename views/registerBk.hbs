<!-- /register -->

<h2>Sign up to join our campain today</h2>
<form class="col s12 register" action="/register" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="row">
        <div class="col s12">


                <!-- FIRST NAME -->
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">ic_person</i>
                    <input id="firstName" class="validate" type="text" name="firstName" autocomplete="given-name" required>
                    <label for="firstName">First Name</label>
                </div>

                <!-- LAST NAME -->
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">person_outline</i>
                    <input id="family-name" class="validate" type="text" name="lastName" autocomplete="family-name" required>
                    <label for="family-name">Last Name</label>
                </div>

        </div>
    </div>

    <!-- EMAIL -->
    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <input id="email" class="validate" type="email" name="email" autocomplete="email" required>
            <label for="email" data-error="wrong email format" data-success="right">Email Address</label>
        </div>
    </div>

    <!-- PASSWORD -->
    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix">fingerprint</i>
            <input id="password" class="validate" type="password" name="password" autocomplete="new-password" required>
            <label for="password" data-error="wrong" data-success="right">Password</label>
        </div>
    </div>
    <button class="btn center-align waves-effect waves-light" type="submit" name="action">SIGN UP
      <i class="material-icons right">send</i>
    </button>

    <!-- <button type="submit" name="submit">SIGN UP</button> -->
</form>

<p>if you are already a member, please <a href="/login">log in</a></p>
