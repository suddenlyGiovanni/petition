<script type="text/javascript" src="/js/petition.js"></script>

<div id="petition">
    <p>
        Sign our petition!
    </p>
    {{#if error}}
        {{>error}}
    {{/if}}

    <section>
        <div class="row">

            <form class="petition col s12" action="/petition" method="POST">
                <!-- HIDDEN INPUT FORM -->
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="text" name="signature" hidden="true" required>
                <!-- CARD -->
                <div class="row">
                    <div class="col s12 m8">
                        <div class="card large hoverable">
                            <div class="card-content">
                                <div class="row">

                                    <!-- FIRST NAME -->
                                    <div class="input-field col s6 m6">
                                        <i class="material-icons prefix">person</i>
                                        <input id="firstName" class="validate" type="text" name="firstName" autocomplete="given-name" value="{{firstName}}" disabled>
                                        <!-- <label for="firstName" class="active">First Name</label> -->
                                    </div>

                                    <!-- LAST NAME -->
                                    <div class="input-field col s6 m6">
                                        <i class="material-icons prefix">person_outline</i>
                                        <input id="family-name" class="validate" type="text" name="lastName" autocomplete="family-name" value="{{lastName}}" disabled>
                                        <!-- <label for="family-name" class="active">Last Name</label> -->
                                    </div>
                                </div>

                                <div class="row">
                                    <span class="card-title">SIGN HERE</span>

                                </div>

                                <canvas id="canvas" width="400" height="100" style="border-style:dotted"></canvas>
                            </div>
                            <div class="card-action">
                                <!-- <a href="#">This is a link</a> -->
                                <button class="btn waves-effect waves-light red" type="button" name="clear">
                                    CLEAR
                                    <i class="material-icons right">clear</i>
                                </button>

                                <button class="btn waves-effect waves-light" type="submit" name="submit">
                                    SIGN
                                    <i class="material-icons right">edit</i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>


    </section>
</div>
