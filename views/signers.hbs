<p>all the signers:</p>
<table class="col s12 m 12 striped ">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>City</th>
    </thead>
    <tbody>
        {{#each signers}}
            <tr>
                <td>
                    {{#if this.url}}
                        <a href="http://{{this.url}}" target="_blank">
                    {{this.firstName}}
                </a>
                    {{else}}
                        {{this.firstName}}
                    {{/if}}
                </td>
                <td>
                    {{#if this.url}}
                        <a href="http://{{this.url}}" target="_blank">
                    {{this.lastName}}
                </a>
                    {{else}}
                        {{this.lastName}}
                    {{/if}}
                </td>

                <td>
                    {{#if this.age}}
                        {{this.age}}
                    {{/if}}
                </td>

                <td>
                    {{#if this.city}}
                        <a href="/petition/signers/{{this.city}}">{{this.city}}</a>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
